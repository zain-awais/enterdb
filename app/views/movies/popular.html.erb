<h1>Popular Movies</h1>
<p>Presented by EnterDB</p>

<div class="row">
  <% @popular.each do |pop_movie| %>
    <div class="col-md-2">
      <div class="card mb-4" style="width: 18rem;">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Title: <%= pop_movie["title"] %> </h5>
            <h5 class="card-title">Rating: <%= pop_movie["vote_average"] %> </h5>
            <p class="card-text"><%= pop_movie["overview"] %></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
